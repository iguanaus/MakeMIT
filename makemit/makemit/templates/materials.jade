                    //-       | whereby a sheet of plastic is heated to a forming temperature, 
                    //-       | stretched onto a single-surface mold, and forced against the mold by a vacuum (suction of air)

                    
            
            div.ui.divider

            div.header
              h2 Materials List
            div.ui.stackable.one.column.grid
              div.row
                div.center.aligned.center.floated.column
                  div.ui.accordion.styled#materials-accordion
                    {% for material in materials %}
                    div.title #{material.header}
                    div.content
                      div.ui.three.column.grid
                        {% for row in material.materials %}
                        div.row
                          {% for submaterial in row %}
                          div.column
                            li 
                              {% if submaterial.link %}
                              a(href=submaterial['link']) #{submaterial.part}
                              {% else %}
                              | #{submaterial.part}
                              {% endif %}
                          {% endfor %}
                        {% endfor %}
                    {% endfor %} 

            


   //- Initiate skrollr
  script.
    (function( $ ) {
      
      var s = skrollr.init({render: function(data) {

          },
          forceHeight:false,
      });
      skrollr.menu.init(s,{animate:true});

    })(jQuery);

    $('.ui.accordion').accordion({exclusive:false});
