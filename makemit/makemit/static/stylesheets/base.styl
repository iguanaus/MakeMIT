@import 'constants'
@import 'mixins'

body
  font-family: MAKE-BODY-FONT
  margin: 0
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased

  p
    font-family: MAKE-BODY-FONT

  a 
    color: MAKEMIT-ACCENT
    font-weight: 700
    text-decoration: none
    
  h1, h2, h3
    font-family: MAKE-HEADER-FONT

  .accent
    color: MAKEMIT-ACCENT

.no-border
  border:none !important
  text-align:center !important
  -webkit-box-shadow: none !important
  -moz-box-shadow: none !important
  box-shadow: none !important

/*general skrollr settings*/

.skrollr-desktop body
  height:100% !important

.hsContainer 
  display: table
  table-layout: fixed
  min-height: 100vh
  max-width:100%
  width:100%
  overflow: hidden
  position: relative
  


@media only screen and (max-height: 480px)
  .bcg
    background-attachment: scroll

  #skrollr-body
    background-attachment: scroll


@media only screen and (max-width: 480px)
  section
    //height:100% !important
    min-height:100% !important
    position:relative !important
  
  .hsContent 
    h1
      font-size:3em
    
    p
      //width:90%
      padding-left:5%
      padding-right:5%

  .bcg
    background-attachment: scroll

  #skrollr-body
    background-attachment: scroll

/*nav bar settings*/
#nav
  position:fixed
  z-index:995
  width:100%
  font-family: MAKE-BODY-FONT
  background: #fff
  border-radius: 0

  a.item
    margin: 0 1em;
    margin-top: 14px
    margin-bottom: 14px
    position: relative
    top: 50%
    color: GRAY

  a.item:hover:after
    content: '';

    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0px;
    opacity: .6
    border-bottom: 3px solid GRAY
    transition: all 300ms ease

  .item
    font-size:1.3rem

  .link
    font-family: MAKE-HEADER-FONT
    font-size: .9em

  .link:hover
    opacity: .6
    transition: all 200ms ease

  #floating-nav-icon
    max-width: 400px

  #attached-nav-icon
    max-width: 180px

  #icon 
    width: 20px
  
  @media only screen and (max-width:850px)
    .item
      padding-left:.73em
      padding-right:.73em
      font-size:1.0rem
      
    .brand
      visibility:collapse
      width:0px
      max-width:0px
      padding:0px
      
    .container
      width:auto
      margin: 5px 20px

