@import 'constants'
@import 'mixins'
@import 'base'

/*logo slide*/

#skrollr-body
  background:black

.parallax-image-wrapper   
    position:fixed  
    left:0  
    width:100%  
    overflow:hidden  
    
.parallax-image-wrapper-50   
  height:50%  
  top:-50%  
  
.parallax-image-wrapper-100   
  height:100%  
  top:-100%  
  
.parallax-image   
  display:none  
  position:absolute  
  bottom:0  
  left:0  
  width:100%  
  background-repeat:no-repeat  
  background-position:center  
  background-size:cover  
  
.parallax-image-50   
  height:200%  
  top:-50%  
  
.parallax-image-100   
  height:100%  
  top:0  

.parallax-image.skrollable-between 
  display:block

#nav
  height: 50px

#home-slide
  .bcg 
    background:transparent
    
    .hsContainer
      width:100%

      .hsContent
        min-height:100vh
        padding-bottom:50px
        padding-top: 45vh
        text-align: center

        h1 
          text-transform: uppercase
          color: #fff
          letter-spacing: 8px
          font-size: 5em
          line-height: .6em
          font-family: MAKE-HEADER-FONT

        #title-accent
          color: YELLOW

        i
          font-size: 1.1em

        h2
          color: #fff
          font-size: 1.6em
          letter-spacing: 2px
          margin-bottom: 20px
          font-weight: 700
          font-family: MAKE-HEADER-FONT

        a:hover
          color: YELLOW

        h4, a
          font-size: 1.3em
          color: #fff
          font-weight: 400
          font-family: MAKE-HEADER-FONT

      @media only screen and (max-height:667px)
        .hsContent
          padding-top: 32vh

    .ui.stackable.grid
      margin-top: 10px

    .ui.segment
      background: none

    h3 
      margin: 0 auto

    #register
       font-family: MAKE-HEADER-FONT
       background: none
       margin-left: auto
       margin-right: auto
       font-size:.9em
       font-weight:700
       width: 20vw
       min-width: 300px
       border: 3px solid #fff
       text-transform: uppercase
       color: #fff
       letter-spacing: 2px

    #register:hover
      transition: all 600ms ease
      color: YELLOW

    #mailsignup
       background: none
       margin-left: auto
       margin-right: auto
       width: 35vw
       min-width: 350px
       border: 3px solid #fff
       text-transform: uppercase


      .title
        color: #fff
        letter-spacing: 2px

        h3 
          font-size: 1.1em

      .title:hover
        transition: all 600ms ease
        color: YELLOW

    .ui.error.field 
      box-shadow: none
    
    .ui.red.message
      background: none
      box-shadow: none
      margin: 0
      padding-top: 0
      color: YELLOW
      letter-spacing: 0
      text-transform: none

      ul
        list-style-type: none
        padding-left: 0

    button
      color: #fff
      background-color: YELLOW
      text-transform: uppercase  
      letter-spacing: 2px

      h3 
        font-size: 1em

    .content
      border-top: 3px solid #fff

      .ui.segment 
        box-shadow: none

      form 
        padding: 5px
        padding-top: 0

      p 
        text-transform: none  
        font-size: 1em
        color: #fff
        text-align: center
        font-family: MAKE-BODY-FONT
        font-weight: 500
        letter-spacing: 0

      .ui.field:focus
        box-shadow: 5px 0 0 0 YELLOW inset

      .ui.field
        color: TEXT

    button:hover
      background-color: #fff
      color: GRAY
      transition: all 600ms ease

  #down-arrow
    position:absolute
    display:inline-block
    bottom:10px
    right:50%
    left:49%
    i
      color: #fff
    
  #down-arrow a:hover
    text-decoration:none

  #down-arrow:hover
    i
      color: YELLOW
      transition: all 600ms ease

  @media only screen and (max-height:480px)
    .bcg #tools
      margin-top: -25%


  @media only screen and (max-width:480px)

    .bcg
    
      .hsContainer
        min-height:100vh

        .hsContent
        
          #down-arrow
            position:relative
            display:block
            margin-left:50%
            margin-right:50%

          h1 
            font-size: 4em
            font-family: MAKE-HEADER-FONT
    
