/*contact slide*/

#contact-slide

  .bcg 
    background-image:url("http://i.imgur.com/vjyOiCR.png")
    background-position: center center
    background-repeat: no-repeat
    background-size: cover
    min-height: 100%
    text-align: center
    height:100%

    .hsContainer
      padding: 100px 0px 10px 0px
      height:auto
      
      table
        min-height:100vh
        margin:auto

      i.icon
        font-size:1.3em

      .logo 
        margin-right: 30px

      h1 
        color: #fff
        text-transform: uppercase
        letter-spacing: 5px
        font-size: 1.6em
        margin-top: 0

      #accent
        color: GRAY

      .contact 
        margin-top: 100px
        bottom: 70px

        p 
          color: #fff
          font-size: 1.3em
          line-height: 1.8em
          font-family: MAKE-HEADER-FONT

        p.footer
            margin-top:1em
            color: #000
            font-size: 0.8em
            line-height: 1.8em
            font-family: MAKE-BODY-FONT

            a
              color: GRAY

            a:hover
              opacity: .7
              transition: all 300ms ease

        i
          color: GRAY

        i:hover
          opacity: .7
          transition: all 300ms ease